<EditForm Model="product" OnValidSubmit="onValidSubbmit">
	<DataAnnotationsValidator/>
	<div class="form-group">
		<label>Codigo Producto</label>
		<div>
			<InputNumber class="form-control" @bind-Value="@product.CodProducto" />
			<ValidationMessage For="@(() => product.CodProducto)" />
		</div>
	</div>
	<div class="form-group">
		<label>Nombre Producto</label>
		<div>
			<InputText class="form-control" @bind-Value="@product.NombreProducto" />
			<ValidationMessage For="@(() => product.NombreProducto)" />
		</div>
	</div>

	<div class="form-group">
		<label>Precio Producto</label>
		<div>
			<InputNumber class="form-control" @bind-Value="@product.PrecioProducto" />
			<ValidationMessage For="@(() => product.PrecioProducto)" />
		</div>
	</div>

	<div class="form-group">
		<label>Stock Producto</label>
		<div>
			<InputNumber class="form-control" @bind-Value="@product.Stock" />
			<ValidationMessage For="@(() => product.Stock)" />
		</div>
	</div>

	<br/>
	<button class="btn btn-primary" type="submit">Aceptar</button>
	<button class="btn btn-secondary" @onclick="onCancel">Cancelar</button>
</EditForm>
@code {
	[Parameter] public Producto product { get; set; } = new Producto();
	[Parameter] public EventCallback onValidSubbmit { get; set; }
	[Parameter] public EventCallback onCancel { get; set; }
